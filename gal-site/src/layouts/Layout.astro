---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="Shift_JIS" />
    <meta name="description" content="ちょーヤバイギャルサイト♡" />
    <title>{title}</title>
    <style>
      body {
        font-family: "ＭＳ Ｐゴシック", "MS PGothic", Arial, sans-serif;
        background-color: #FF1493;
        background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20"><rect width="20" height="20" fill="%23FF1493"/><rect x="0" y="0" width="10" height="10" fill="%23FFB6C1"/><rect x="10" y="10" width="10" height="10" fill="%23FFB6C1"/></svg>');
        margin: 0;
        padding: 10px;
        text-align: center;
      }
      
      table {
        border: 3px solid #FFD700;
        background-color: #FFFFE0;
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
      }
      
      td {
        border: 1px solid #FF69B4;
        padding: 10px;
        font-weight: bold;
      }
      
      .header-cell {
        background-color: #FF69B4;
        color: white;
        font-size: 18px;
        font-weight: bold;
      }
      
      .content-cell {
        background-color: white;
        color: #000;
      }
      
      .blink {
        animation: blink 1s linear infinite;
      }
      
      @keyframes blink {
        0%, 50% { opacity: 1; }
        51%, 100% { opacity: 0; }
      }
      
      marquee {
        background-color: #00FFFF;
        border: 2px solid #000;
        padding: 5px;
        font-weight: bold;
        color: #FF1493;
      }
      
      .rainbow-text {
        background: linear-gradient(to right, #ff0000, #ff8000, #ffff00, #80ff00, #00ff00, #00ff80, #00ffff, #0080ff, #0000ff, #8000ff, #ff0080);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: bold;
        font-size: 24px;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>