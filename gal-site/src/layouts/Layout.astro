---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="ちょーヤバイギャルサイト♡" />
    <title>{title}</title>
    <style>
      body {
        font-family: "ＭＳ Ｐゴシック", "MS PGothic", Arial, sans-serif;
        background-color: #FFB6C1;
        background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 40 40"><rect width="40" height="40" fill="%23FFB6C1"/><circle cx="8" cy="8" r="3" fill="%23000" opacity="0.3"/><circle cx="25" cy="15" r="4" fill="%23000" opacity="0.25"/><circle cx="32" cy="5" r="2" fill="%23000" opacity="0.2"/><circle cx="15" cy="25" r="3" fill="%23000" opacity="0.3"/><circle cx="35" cy="30" r="2.5" fill="%23000" opacity="0.25"/><circle cx="5" cy="35" r="2" fill="%23000" opacity="0.2"/><circle cx="20" cy="35" r="3" fill="%23000" opacity="0.3"/></svg>');
        margin: 0;
        padding: 10px;
        text-align: center;
        animation: bodyGlow 3s ease-in-out infinite alternate;
      }
      
      @keyframes bodyGlow {
        0% { filter: drop-shadow(0 0 5px #FF69B4); }
        100% { filter: drop-shadow(0 0 15px #00FFFF); }
      }
      
      table {
        border: 3px solid #FFD700;
        background-color: #FFFFE0;
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        box-shadow: 0 0 20px #FFD700, inset 0 0 20px rgba(255, 215, 0, 0.3);
        animation: tableNeon 2s ease-in-out infinite alternate;
      }
      
      @keyframes tableNeon {
        0% { 
          box-shadow: 0 0 20px #FFD700, inset 0 0 20px rgba(255, 215, 0, 0.3);
          border-color: #FFD700;
        }
        100% { 
          box-shadow: 0 0 30px #FF1493, inset 0 0 30px rgba(255, 20, 147, 0.4);
          border-color: #FF1493;
        }
      }
      
      td {
        border: 1px solid #FF69B4;
        padding: 10px;
        font-weight: bold;
      }
      
      .header-cell {
        background-color: #FF69B4;
        color: white;
        font-size: 18px;
        font-weight: bold;
        text-shadow: 0 0 10px #FFFFFF, 0 0 20px #00FFFF, 0 0 30px #00FFFF;
        animation: headerPulse 1.5s ease-in-out infinite;
      }
      
      @keyframes headerPulse {
        0%, 100% { 
          background-color: #FF69B4;
          transform: scale(1);
        }
        50% { 
          background-color: #FF1493;
          transform: scale(1.02);
        }
      }
      
      .content-cell {
        background-color: white;
        color: #000;
        box-shadow: inset 0 0 10px rgba(255, 105, 180, 0.2);
      }
      
      .blink {
        animation: blink 1s linear infinite;
        text-shadow: 0 0 5px currentColor, 0 0 10px currentColor, 0 0 15px currentColor;
      }
      
      @keyframes blink {
        0%, 50% { 
          opacity: 1; 
          transform: scale(1);
          text-shadow: 0 0 5px currentColor, 0 0 10px currentColor, 0 0 15px currentColor;
        }
        51%, 100% { 
          opacity: 0.3; 
          transform: scale(0.98);
          text-shadow: 0 0 2px currentColor;
        }
      }
      
      marquee {
        background-color: #00FFFF;
        border: 2px solid #000;
        padding: 5px;
        font-weight: bold;
        color: #FF1493;
        box-shadow: 0 0 15px #00FFFF, inset 0 0 15px rgba(0, 255, 255, 0.3);
        text-shadow: 0 0 5px #FFFFFF, 0 0 10px #FFD700;
        animation: marqueeGlow 2s ease-in-out infinite alternate;
      }
      
      @keyframes marqueeGlow {
        0% { 
          background-color: #00FFFF;
          box-shadow: 0 0 15px #00FFFF, inset 0 0 15px rgba(0, 255, 255, 0.3);
        }
        100% { 
          background-color: #FFD700;
          box-shadow: 0 0 15px #FFD700, inset 0 0 15px rgba(255, 215, 0, 0.3);
        }
      }
      
      .rainbow-text {
        background: linear-gradient(to right, #ff0000, #ff8000, #ffff00, #80ff00, #00ff00, #00ff80, #00ffff, #0080ff, #0000ff, #8000ff, #ff0080);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: bold;
        font-size: 24px;
        animation: rainbowShift 3s linear infinite;
      }
      
      @keyframes rainbowShift {
        0% { filter: hue-rotate(0deg); }
        100% { filter: hue-rotate(360deg); }
      }
      
      /* Neon button effects */
      input[type="button"] {
        transition: all 0.3s ease;
        box-shadow: 0 0 10px currentColor;
        text-shadow: 0 0 5px #FFFFFF;
      }
      
      input[type="button"]:hover {
        animation: buttonGlow 0.5s ease-in-out infinite alternate;
      }
      
      @keyframes buttonGlow {
        0% { 
          box-shadow: 0 0 10px currentColor;
          transform: scale(1);
        }
        100% { 
          box-shadow: 0 0 20px currentColor, 0 0 30px currentColor;
          transform: scale(1.05);
        }
      }
      
      /* Sparkle effects */
      .sparkle {
        position: relative;
        display: inline-block;
      }
      
      .sparkle::before,
      .sparkle::after {
        content: "✨";
        position: absolute;
        animation: sparkleRotate 2s linear infinite;
        font-size: 12px;
      }
      
      .sparkle::before {
        top: -10px;
        left: -10px;
      }
      
      .sparkle::after {
        bottom: -10px;
        right: -10px;
        animation-delay: 1s;
      }
      
      @keyframes sparkleRotate {
        0% { transform: rotate(0deg) scale(0.5); opacity: 0; }
        50% { transform: rotate(180deg) scale(1); opacity: 1; }
        100% { transform: rotate(360deg) scale(0.5); opacity: 0; }
      }
      
      /* Floating hearts */
      .heart-float {
        position: relative;
        display: inline-block;
      }
      
      .heart-float::before {
        content: "💕";
        position: absolute;
        animation: heartFloat 4s ease-in-out infinite;
        font-size: 16px;
        left: 50%;
        transform: translateX(-50%);
      }
      
      @keyframes heartFloat {
        0%, 100% { 
          top: 0; 
          opacity: 0;
          transform: translateX(-50%) scale(0.5);
        }
        25% { 
          top: -20px; 
          opacity: 1;
          transform: translateX(-50%) scale(1);
        }
        75% { 
          top: -40px; 
          opacity: 1;
          transform: translateX(-50%) scale(1);
        }
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>