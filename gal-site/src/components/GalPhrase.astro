---
import galPhrases from '../data/gal-phrases.json';

// Get a random phrase on each page load
const randomPhrase = galPhrases[Math.floor(Math.random() * galPhrases.length)];
---

<div class="gal-phrase-container text-center mb-8">
  <div class="inline-block bg-gradient-to-r from-gal-pink via-gal-purple to-gal-gold p-4 rounded-full border-4 border-white shadow-2xl transform rotate-2 animate-bounce-slow">
    <p class="text-white font-black text-xl md:text-2xl animate-rainbow drop-shadow-lg" id="gal-phrase">
      {randomPhrase}
    </p>
  </div>
  <button 
    id="phrase-button" 
    class="mt-4 bg-gal-neon text-black font-black px-6 py-3 rounded-full shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200 animate-pulse-fast"
  >
    新しいフレーズ♡
  </button>
</div>

<script>
  import galPhrases from '../data/gal-phrases.json';
  
  document.getElementById('phrase-button')?.addEventListener('click', () => {
    const phraseElement = document.getElementById('gal-phrase');
    if (phraseElement) {
      const newPhrase = galPhrases[Math.floor(Math.random() * galPhrases.length)];
      phraseElement.textContent = newPhrase;
      
      // Add animation effect
      phraseElement.style.transform = 'scale(1.2)';
      setTimeout(() => {
        phraseElement.style.transform = 'scale(1)';
      }, 200);
    }
  });
</script>

<style>
  .gal-phrase-container {
    filter: drop-shadow(0 0 10px rgba(255, 105, 180, 0.7));
  }
</style>